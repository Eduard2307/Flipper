<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FLIPPER TOOLS"
        android:textColor="@color/hacker_green"
        android:textSize="20sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnNfcRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="READ NFC TAG"
        android:backgroundTint="@color/hacker_green"
        android:textColor="@color/black"
        android:typeface="monospace"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnIrTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IR BLASTER TEST"
        android:backgroundTint="@color/hacker_green"
        android:textColor="@color/black"
        android:typeface="monospace"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnBleScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BLE SCAN"
        android:backgroundTint="@color/hacker_green"
        android:textColor="@color/black"
        android:typeface="monospace"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/toolLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hacker_dark_green"
        android:padding="8dp"
        android:text="> Hardware tools ready..."
        android:textColor="@color/hacker_green"
        android:typeface="monospace"/>

</LinearLayout>
