<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLIP-SHARK v1.0"
        android:textColor="@color/hacker_green"
        android:textSize="24sp"
        android:typeface="monospace"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM READY..."
        android:textColor="@color/hacker_green"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnNetwork"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="NETWORK SCANNER (T-SHARK)"
        android:textColor="@color/black"
        android:backgroundTint="@color/hacker_green"
        android:typeface="monospace"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/>

    <Button
        android:id="@+id/btnFlipper"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="HARDWARE TOOLS (FLIPPER)"
        android:textColor="@color/black"
        android:backgroundTint="@color/hacker_green"
        android:typeface="monospace"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnNetwork"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnBadKb"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="BAD-KB (HID INJECTOR)"
        android:textColor="@color/black"
        android:backgroundTint="@color/hacker_red"
        android:typeface="monospace"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnFlipper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/statusLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="@color/hacker_dark_green"
        android:padding="8dp"
        android:text="> Initializing modules...\n> Interface loaded.\n> Waiting for user input..."
        android:textColor="@color/hacker_green"
        android:typeface="monospace"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/btnFlipper"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
